<% include ./partials/header.ejs %>

<div class="us main text container segment">
    <div class="ui huge header">Edit Post</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="body">
            <label>Body</label>
            <textarea name="blog[body]" column="4"><%= blog.body %></textarea>
        </div>
        <button class="ui green basic button">Submit changes</button>
    </form>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button">Delete post</button>
    </form>
</div>

<% include ./partials/footer.ejs %>